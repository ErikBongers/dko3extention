{
  "manifest_version": 3,
  "name": "DKO3 Helper (beta)",
  "description": "Stedelijk Onderwijs Antwerpen. Helper extension voor DKO3.",
  "version": "1.0",
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "images/dko3.png"
  },
  "content_scripts": [
    {
      "js": [
        "scripts/loader.js"
      ],
      "css": [
        "css/general.css",
        "css/trimesterTable.css"
      ],
      "matches": [
        "https://administratie.dko3.cloud/*"
      ]
    }
  ],
  "background": {
    "service_worker": "scripts/serviceworker.js"
  },
  "options_page": "options.html",
  "permissions": [
    "storage"
  ],
  "web_accessible_resources": [ {
    "matches": ["https://administratie.dko3.cloud/*"],
    "resources": [
      "scripts/ts/lessen/*",
      "scripts/ts/leerling/*",
      "scripts/ts/academie/*",
      "scripts/ts/table/*",
      "scripts/ts/werklijst/*",
      "scripts/ts/main.js",
      "scripts/ts/globals.js",
      "scripts/ts/cloud.js",
      "scripts/ts/pageHandlers.js",
      "scripts/ts/pageObserver.js"
    ]
  }
  ]
}